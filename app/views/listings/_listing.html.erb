<div class style ="card" style="card-box-shadow: 0px 4px 4px rgba(0, 0, 0, 0.15); border-radius: 4px; border-style: solid; border-width: 4px; border-style: solid; border-color: black; display: inline-flex; flex-direction: column; align-items: flex-start; justify-content: flex-start;">
  <img class style ="width: 100%; height: 216px; border-radius: 8px;" src="<%= listing.image %>"/>
  <div class style ="listing-info">
    <div class="listing-content" style ="width: 100%; display: flex; flex-direction: column; align-items: flex-start; justify-content: flex-start;">
      <p class style ="width: 100%; font-size: 24px; font-weight: 600; line-height: 20px; color: black;"><%= listing.title %></p>
      <p class style ="width: 100%; font-size: 18px; font-weight: 400; line-height: 20px; color: black;"><%= listing.description %></p>
      <p style ="width: 100%; font-size: 18px; font-weight: 300; line-height: 20px; color: black;"> <%= listing.price %></p>
      <p> <%#=  link_to "Show Listing", listing_path(@listing),  class: "btn btn-flat" %> </p>
    </div>
  </div>
</div>
