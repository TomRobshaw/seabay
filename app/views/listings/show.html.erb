<div class="container">
  <h1><%= @listing.title %></h1>
    <div id="listing" class="row display-flex flex-wrap-wrap">
      <div class="card">
        <%= cl_image_tag @listing.image.key, crop: :fill, class:"card-img-top" %>
        <h4><%= @listing.title %></h4>
        <p><%= @listing.description %></p>
        <p>$<%= @listing.price.round(0) %></p>
      <div class="card-body">
          <%= link_to "Create bid", new_listing_bid_path(@listing), class:"btn btn-primary" %>
          </div>
        </div>
    </div>
  </div>
