<div class="container">
  <h1> Welcome to the '<%= @listing.title %>' bidding page! </h1>
  <div>
    <%= simple_form_for [@listing, @bid] do |b| %>
      <%= b.input :value, label: "Place your bid" %>
    <%= b.submit :submit, class:"btn btn-primary", data: { turbo_method: :delete, turbo_confirm: "Are you sure you want to bid on this listing?" }%>
    <% end %>
  </div>
</div>
